<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tap_secure_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    tools:context="com.example.alexandryan.tapsecure.TapSecureMainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cardsGroup">

            <Switch
                android:text="Enable TapSecure for\nChequing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/enableTsSwitch"
                android:textSize="20dp"
                android:paddingLeft="65dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/td_border_full" />

            <Switch
                android:text="Enable TapSecure for\nVisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visaSwitch"
                android:textSize="20dp"
                android:paddingLeft="65dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/td_border_full"/>

            <Button
                android:text="Edit Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationsBtn"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="20dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:background="@drawable/td_border_full"
                android:drawableLeft="@drawable/ic_notifications"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:stateListAnimator="@null"
                android:onClick="onNotificationsClick" />
            <Button
                android:text="Edit Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settingsBtn"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="20dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:background="@drawable/td_border_full"
                android:drawableLeft="@drawable/ic_notifications"
                android:drawablePadding="20dp"
                android:layout_margin="0dp"
                android:stateListAnimator="@null"
                android:onClick="onSettingsClick" />


        </LinearLayout>
</RelativeLayout>
