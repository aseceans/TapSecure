<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tap_secure_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandryan.tapsecure.TapSecureSplashActivity"
    android:background="#FFFFFF">

    <Button
        android:text="Get Started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00A221"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/getstartedBtn"
        android:onClick="OnGetStartedClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/tap_pay_intro"
        android:id="@+id/tapsecureintro"
        android:paddingTop="40dp"
        android:paddingBottom="80dp"
        android:foregroundGravity="center"
        />
</FrameLayout>
