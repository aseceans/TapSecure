<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandryan.tapsecure.NotificationsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="TD TapSecure Notifications"
            android:textSize="30dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="18dp"
            android:textStyle="bold"
            android:background="#1A5436"
            android:textColor="#FFFFFF"/>

        <Switch
            android:text="Enable TapSecure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enableTsSwitch"
            android:textSize="20dp"
            android:paddingLeft="65dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/td_button"
            android:checked="false"
            android:splitTrack="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardsGroup">

            <Switch
                android:text="Visa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visaSwitch"
                android:textSize="20dp"
                android:paddingLeft="65dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/td_button"/>

            <Button
                android:text="TapSecure Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settingsBtn"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="20dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:background="@drawable/td_button"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@null"
                android:onClick="onSettingsClick" />

            <Button
                android:text="Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationsBtn"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="20dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:background="@drawable/td_button"
                android:drawableLeft="@drawable/ic_notifications"
                android:drawablePadding="20dp"
                android:layout_marginTop="2dp"
                android:stateListAnimator="@null"
                android:layout_margin="0dp"
                android:onClick="onNotificationsClick" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
